<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Palace Server</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Dashboard
            </NavLink>
            <NavLink class="nav-link" href="Logs" Match="NavLinkMatch.All">
                <span class="oi oi-list" aria-hidden="true"></span> Logs
            </NavLink>
            <NavLink class="nav-link" href="Hosts" Match="NavLinkMatch.All">
                <span class="oi oi-list" aria-hidden="true"></span> Hosts
            </NavLink>
            <NavLink class="nav-link" href="Packages" Match="NavLinkMatch.All">
                <span class="oi oi-list" aria-hidden="true"></span> Packages
            </NavLink>
            <NavLink class="nav-link" href="UploadPackage" Match="NavLinkMatch.All">
                <span class="oi oi-hard-drive" aria-hidden="true"></span> Upload Package
            </NavLink>
        </div>
    </nav>
    <div class="text-center">
        <small class="text-white">Version : @version</small>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;
    private string version = "1.0.0.0";

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        version = $"{typeof(Program).Assembly.GetName()?.Version}";
        base.OnInitialized();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
